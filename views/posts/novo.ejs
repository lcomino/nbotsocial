<% include ../header %>
    <div class="row">
        <div class="col-xs-12">
            <header>            
                <h2>Nbotsocial - Novo post</h2>            
            </header>
        </div>
    </div>
    <section>
        <form action="/posts/novo" method="post">
            <div class="row">
                <div class="col-xs-12">
                    
                        <div class="form-group">
                            <label for="conteudo">Conte√∫do</label>
                            <textarea id="conteudo" name="conteudo" class="form-control"></textarea>
                        </div>                                    
                    
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4 form-group">
                    <select name="redeSocial" id="redes-sociais" class="form-control">
                        <option value="Twitter">Twitter</option>
                        <option value="Instagram">Instagram</option>
                        <option value="Facebook">Facebook</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4 form-group">
                    <input type="date" name="programadoParaData" class="form-control">
                    <input type="time" name="programadoParaHora" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-info btn-lg">Criar</button>
                </div>
            </div>
        </form>
    </section>
<% include ../footer %>
